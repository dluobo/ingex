TOPLEVEL = ..
include $(TOPLEVEL)/vars.mk


SOURCES =

BROWSE_ENCODER_OBJECTS = $(BROWSE_ENCODER_DIR)/.c_objs/browse_encoder.o

GENERAL_OBJECTS = $(GENERAL_DIR)/.objs/Logging.o \
	$(GENERAL_DIR)/.objs/RecorderException.o

RECMXF_OBJECTS = $(RECMXF_DIR)/.objs/MXFCommon.o \
	$(RECMXF_DIR)/.objs/ArchiveMXFContentPackage.o \
	$(RECMXF_DIR)/.objs/ArchiveMXFFile.o \
	$(RECMXF_DIR)/.objs/MXFFileReader.o
	
MXF_INC = $(LIBMXF_INC) $(LIBMXF_ARCHIVE_INC) $(LIBMXF_ARCHIVE_WRITE_INC) $(LIBMXF_ARCHIVE_INFO_INC) $(LIBMXF_READER_INC)
MXF_LIB = $(LIBMXF_ARCHIVE_WRITE_LIB) $(LIBMXF_ARCHIVE_INFO_LIB) $(LIBMXF_READER_LIB) $(LIBMXF_LIB) $(LIBMXFPP_LIB)

INCLUDES += $(INGEX_COMMON_INC) $(MXF_INC) $(GENERAL_INC) $(BROWSE_ENCODER_INC) $(VIDEO_CONV_INC) $(RECMXF_INC)



.PHONY: all
all: generate_browse


generate_browse: .objs/main.o $(OBJECTS) $(GENERAL_OBJECTS) $(RECMXF_OBJECTS) $(BROWSE_ENCODER_OBJECTS)
	$(COMPILE) .objs/main.o $(OBJECTS) $(GENERAL_OBJECTS) $(RECMXF_OBJECTS) $(BROWSE_ENCODER_OBJECTS) $(INGEX_COMMON_LIB) $(FFMPEG_LIB) $(MXF_LIB) -o $@


.PHONY: clean
clean: cmn-clean
	@rm -f generate_browse



include $(TOPLEVEL)/rules.mk



